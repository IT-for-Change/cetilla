<div class="extra-pagination">
	{{pagination}}
</div>

{{#foreach posts visibility="all"}}

<article class="{{post_class}}">
	<div class="inner">
		<div class="box post-box">
			{{#if featured}}
				<span class="post-feature">
					<i class="icon icon-star">{{> "icons/icon-star"}}</i>
				</span>
			{{/if}}
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
			<span class="post-meta">
				{{t "By"}}
				{{authors separator=", "}}
				{{t "on"}}
				<time datetime="{{date format='DD-MM-YYYY'}}">{{date format="DD MMM YYYY"}}</time>
			</span>
			<p class="post-excerpt">{{excerpt}}&hellip;</p>
			{{#primary_tag}}<span class="post-tags"><a class="post-meta-tag" href="{{url}}">{{name}}</a></span>{{/primary_tag}}
		</div>
	</div>
</article>

{{/foreach}}

{{pagination}}
